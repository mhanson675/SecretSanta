@model SantaMessage
@{
    ViewData["Title"] = "Sample Message";
}


<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <br />
    <div style="border-top: 3px solid #22BCE5">
        &nbsp;
    </div>
    <span style="font-family:Arial; font-size:10pt">
        Ok <b>@Model.Gifter.Name</b>, here's your Secret Santa Pick.<br />
        <br />
        You got <b>@Model.Recipient.Name</b>. Their address is:<br />
        <br />
        <b>@Model.Recipient.GetAddress()</b> <br />
        <br />
        Remember, the minimum spending is $<b>@Model.MinPrice</b>, there is no maximum. All gifts should be mailed by <b>@Model.MailingDate</b>. The goal is to have everyone send the gifts at roughly the same time, so they all arrive at around the same time.<br />
        <br />
    </span>
    <img src="/images/drunk_santa.jpg" /><br />
</body>
</html>
